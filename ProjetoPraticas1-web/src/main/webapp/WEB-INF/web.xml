<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <filter>
        <filter-name>FiltroLogin</filter-name>
        <filter-class>br.edu.ifpb.filtros.FiltroLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroLogin</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Autenticacao</servlet-name>
        <servlet-class>br.edu.ifpb.servlets.Autenticacao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroAluno</servlet-name>
        <servlet-class>br.edu.ifpb.servlets.CadastroAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutenticacaoServlet</servlet-name>
        <servlet-class>br.edu.ifpb.servlet.AutenticacaoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutAluno</servlet-name>
        <servlet-class>br.edu.ifpb.servlets.AutAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Autenticacao</servlet-name>
        <url-pattern>/Autenticacao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroAluno</servlet-name>
        <url-pattern>/CadastroAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutenticacaoServlet</servlet-name>
        <url-pattern>/AutenticacaoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutAluno</servlet-name>
        <url-pattern>/AutAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
